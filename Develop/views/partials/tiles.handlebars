<body>
    <div class="column is-half-tablet is-one-third-desktop">
        <div class="card">
            <header class="card-header1 has-text-centered">
                <p class="card-header-title has-text-centered">
                    {{name}}
                </p>
            </header>
            <div class="card-content">
                <div class="media">
                    <div class="media-left"></div>
                    <div class="media-right">
                        <figure class="image is-128x128">
                            <img class="is-rounded" src="{{image}}" alt="Food truck profile picture">
                        </figure>
                    </div>
                    <div class="media-content">
                        <h2 class="title is-4 has-text-centered">Menu</h2>
                        <div class="content">
                            <ul>
                                {{#each menu-items as |item|}}
                                <li>
                                    <p class="title is-5">{{item.name}}</p>
                                    <p class="subtitle is-6">Price: ${{item.price}}</p>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                        {{!-- <button class="button directions-button" data-truck-id="{{id}}" truck-address="{{address}}">Get Directions</button> --}}
                    </div>
                </div>
            </div>
            <footer class="card-footer">
                <a href="https://www.google.com/maps/search/?api=1&query={{address}}" target="_blank" class="card-footer-item">{{address}}</a>
            </footer>
        </div>
    </div>
</body>