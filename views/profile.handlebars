<body class="user-body">
    <section class="section">
        <div class="container">
            <div class="tile is-ancestor">
                <div class="tile  is-vertical is-parent">
                    <div class="tile is-child box left-tile">
                        <h1 class="title centered-image">{{name}}</h1>
                        <figure class="image is-128x128 has-text-centered">
                            <img class="is-rounded" src="{{image}}" alt="Food truck profile picture">
                        </figure>
                        <div class="form-group1">
                            <label class="label">Update Address</label>
                            <div class="control">
                                <input class="input" type="text" placeholder="123 Feast Findr Lane Hometown, USA" id="address">
                                <button type="submit" class="btn btn-primary centered-update" truck-id="{{id}}">Update</button>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="tile is-parent">
                    <div class="tile is-child box right-tile">
                        <h1 class="title has-text-centered">Menu</h1>
                        <div class="content">
                            <ul>
                                {{#each menu-items as |item|}}
                                <li>
                                    <p class="title is-5">{{item.name}}</p>
                                    <p class="subtitle is-6">Price: ${{item.price}}</p>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="/js/profile.js"></script>
</body>
